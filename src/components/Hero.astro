---
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
---

<div class="relative min-h-screen flex flex-col justify-center items-center">
    <div
        class="absolute inset-0 bg-cover bg-center -z-10 bg-[url('/images/mako-01.jpg')] bg-fixed"
    >
    </div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-50 -z-10"></div>
    <div class="text-white pt-72 md:pt-96 lg:mt-auto">
        <h1
            class="text-center tracking-[0.2em] text-5xl max-w-80 md:max-w-full md:text-7xl font-medium font-serif"
        >
            Bienvenido a Obas, tu casa.
        </h1>
    </div>

    <div
        class="flex flex-col justify-center items-center w-full px-4 text-white mt-32 md:mt-64"
    >
        <p
            class="text-4xl text-center max-w-4xl mx-auto mb-52 hidden lg:block uppercase"
        >
            Disfruta de una experiencia que te llevará más allá de un hotel
            tradicional.
        </p>

        <div class="mb-16">
            <a href="/reserva">
                <Button variant="outline">Reserva ahora</Button>
            </a>
        </div>
        <h4 class="uppercase text-xl hidden lg:block">
            Descubre tu siguiente aventura
        </h4>
        <Icon
            name="arrow-down"
            class="mt-10 mb-8 hover:-translate-y-4 transition-transform cursor-pointer hidden lg:block"
            size={60}
        />
    </div>
</div>
